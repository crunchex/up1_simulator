<?xml version="1.0"?>
<launch>

  <!-- Robot pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- Robot config -->
  <arg name="base" default="base" />
  <arg name="manipulator" default="dual_arm" />
  <arg name="io" default="io" />

  <!-- Robot description -->
  <include file="$(find up1_description)/launch/description.launch">
    <arg name="base_module" value="$(arg base)" />
    <arg name="manipulator_module" value="$(arg manipulator)" />
    <arg name="io_module" value="$(arg io)" />
  </include>

  <!-- Robot control information -->
  <include file="$(find up1_gazebo)/launch/$(arg manipulator)_control.launch">
    <arg name="sim" value="true" />
  </include>

  <!-- Robot model -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model up1
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />

</launch>
